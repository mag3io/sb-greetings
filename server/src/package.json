{
  "name": "greetings-api",
  "version": "1.0.0",
  "description": "Just testing",
  "main": "app/index.js",
  "keywords": [
    "express",
    "sandbox"
  ],
  "license": "MIT",
  "private": true,
  "dependencies": {
    "bunyan": "^1.8.1",
    "bunyan-request-logger": "^1.1.0",
    "commander": "^2.9.0",
    "express": "^4.13.4"
  },
  "scripts": {
    "start": "node index.js start",
    "start:dev": "LOG_LEVEL=DEBUG nodemon index.js start | bunyan -o short",
    "stop": "node index.js stop",
    "test": "rm -rf ./coverage && istanbul cover _mocha -- -r test/index.js app/**/*.test.js",
    "test:e2e": "LOG_LEVEL=ERROR mocha test/e2e/*.spec.js",
    "test_exporting_coverage": "rm -rf ./coverage && istanbul cover --report lcovonly _mocha -- -r test/index.js app/**/*.test.js && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "coveralls": "^2.11.12",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2"
  }
}
